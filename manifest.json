{
  "manifest_version": 3,
  "name": "실시간 주가 모니터",
  "version": "1.0",
  "description": "네이버 증권에서 실시간 주가 정보를 가져와 브라우저에 표시합니다",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "offscreen",
    "alarms"
  ],
  "host_permissions": [
    "https://finance.naver.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "주가 모니터 설정"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
